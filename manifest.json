{
	"manifest_version": 2,
	"name": "Fullscreen On Load",
	"version": "0.2",
	"description": "指定したページを開いたとき、フルスクリーンにします。",
	"icons": {
		"32": "icons/32.png",
		"48": "icons/48.png"
	},
	"permissions": [
		"*://*/*",
		"storage"
	],
	"browser_action": {
		"default_icon": "icons/32.png",
		"default_title": "Fullscreen On Load"
	},
	"background": {
		"scripts": [
			"background-script.js"
		]
	},
	"options_ui": {
		"page": "options.html"
	},
	"applications": {
		"gecko": {
			"id": "{d6c1399d-4934-464e-8cfe-865f932681e8}"
		}
	}
}